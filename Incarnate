-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

local function saymsg(string)
	chatsystem.SayMessageRequest:FireServer(tostring(string),"All")
end

UserInputService.InputBegan:Connect(function(input, gameProccesedEvent)
    if input.KeyCode == Enum.KeyCode.RightAlt then
        local choosingNum = math.random(1, #toxic_quotes.placeholder)
		for i,v in pairs(toxic_quotes.placeholder) do
			if choosingNum == i then
				saymsg(v)
			end
		end
    end
end)
